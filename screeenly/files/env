APP_NAME=screeenly
APP_ENV=production
APP_KEY=${APP_KEY}
APP_DEBUG=false
APP_URL=${APP_URL}


# Database Configurations
DB_CONNECTION=${DB_CONNECTION}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}


# Mail Configurations
# Valid mail credentials are required for the password-reset flow
MAIL_DRIVER=${MAIL_DRIVER}
MAIL_HOST=${MAIL_HOST}
MAIL_PORT=${MAIL_PORT}
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_ENCRYPTION=${MAIL_ENCRYPTION}


# GitHub OAuth Configuration
# Create a new OAuth application [here](https://github.com/settings/applications/new)
# and set the credentials here.
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_SECRET=${GITHUB_SECRET}
GITHUB_REDIRECT_URL=${GITHUB_REDIRECT_URL}


# Disable Chrome's Sandbox feature
# More information: https://github.com/stefanzweifel/screeenly/issues/174#issuecomment-423438612
SCREEENLY_DISABLE_SANDBOX=true


## Misc Configuration
FILESYSTEM_DRIVER=public
LOG_CHANNEL=${LOG_CHANNEL}
SESSION_LIFETIME=120
SENTRY_LARAVEL_DSN=
